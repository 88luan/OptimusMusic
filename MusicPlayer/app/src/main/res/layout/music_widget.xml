<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000" >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widget_play"
        android:src="@drawable/btn_play"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:src="@drawable/btn_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/widget_previous"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/widget_play" />

    <ImageButton
        android:src="@drawable/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/widget_Next"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/widget_play" />


    <ImageButton
        android:src="@drawable/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/widget_Stop"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/widget_Next" />


    <ImageButton
        android:src="@drawable/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/widget_Music"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/widget_previous" />

</RelativeLayout>